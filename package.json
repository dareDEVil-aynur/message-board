{
  "name": "message-board",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "install-root": "npm install",
    "install-client": "cd client && npm install",
    "install-server": "cd server && npm install",
    "install-all": "npm run install-root && npm run install-client && npm run install-server",
    "start-client": "cd client && npm run dev",
    "start-server": "cd server && npm run start",
    "start": "npm run install-all && concurrently \"npm run start-client\" \"npm run start-server\""
  },
  "keywords": [],
  "author": "Aynur Rahman Talukdar",
  "license": "ISC",
  "dependencies": {
    "concurrently": "^8.2.2"
  }
}
